<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="495dp"
    android:layout_gravity="center"
    android:background="@color/whiteColorAux"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.AdicionaCategoriaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textSize="18sp"
        android:id="@+id/textFechar"
        />

    <LinearLayout
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_poupanca" />

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_nota" />

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_bonificacao" />

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_extra" />


    </LinearLayout>


</LinearLayout>